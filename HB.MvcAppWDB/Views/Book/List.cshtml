
@{
    ViewData["Title"] = "List";
}

@model List<Kitap>
<h1>List</h1>

<table class="table">

    <thead>
        <tr>
            <th>Yazar Adı</th>
            <th>Kitap Adı</th>
            <th>Basım Tarihi</th>
            <th>Kategori</th>
            <th>işlem</th>
        </tr>
    </thead>
    <tbody>
        @{
            foreach (var item in Model)
            {
                <tr>
                
                    <td>@item.YazarAdı</td>
                    <td>@item.KitapAdı</td>
                    <td>@item.BasımTarihi.Value.ToString("dddd, dd MMMM yyyy")</td>
                    <td>@(item.Kategori.Name ?? "kategori-yok")</td>
                    <td>
                    <a asp-action="Update" asp-route-id="@item.Id" class="btn btn-warning"> Güncelle</a>
                        <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger"> Sil</a>

                    </td>


                </tr>
            }
        }
    </tbody>
</table>